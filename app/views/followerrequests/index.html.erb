<div>
  <div>
    <h1>
      List of all followerrequests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new followerrequest
    </h2>

    <form action="/insert_followerrequest" method="post">
      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create followerrequest
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_followerrequests.each do |a_followerrequest| %>
      <tr>
        <td>
          <%= a_followerrequest.id %>
        </td>

        <td>
          <%= a_followerrequest.recipient_id %>
        </td>

        <td>
          <%= a_followerrequest.sender_id %>
        </td>

        <td>
          <%= a_followerrequest.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_followerrequest.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_followerrequest.updated_at) %> ago
        </td>

        <td>
          <a href="/followerrequests/<%= a_followerrequest.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
