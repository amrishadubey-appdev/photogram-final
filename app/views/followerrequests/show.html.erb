<div>
  <div>
    <h1>
      Followerrequest #<%= @the_followerrequest.id %> details
    </h1>

    <div>
      <div>
        <a href="/followerrequests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_followerrequest/<%= @the_followerrequest.id %>">
          Delete followerrequest
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipient
      </dt>
      <dd>
        <%= @the_followerrequest.recipient_id %>
      </dd>

      <dt>
        Sender
      </dt>
      <dd>
        <%= @the_followerrequest.sender_id %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_followerrequest.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_followerrequest.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_followerrequest.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit followerrequest
    </h2>

    <form action="/modify_followerrequest/<%= @the_followerrequest.id %>"  method="post" >
      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id" value="<%= @the_followerrequest.recipient_id %>">
      </div>

      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" value="<%= @the_followerrequest.sender_id %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_followerrequest.status %>">
      </div>

      <button>
        Update followerrequest
      </button>
    </form>
  </div>
</div>

<hr>
